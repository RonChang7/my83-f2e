// tsconfig.json
{
  "compilerOptions": {
    // "target": "esnext",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    // "noImplicitThis": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "strict": true,
    // "strictNullChecks": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
    },
    "types": ["@types/node", "@nuxt/types", "@types/webpack-env", "@nuxt/typescript-build"]
  },
  "exclude": ["node_modules"]
}
